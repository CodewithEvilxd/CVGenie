generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  googleId  String?
  createdAt DateTime @default(now())
  lastLogin DateTime?
  loginLogs LoginLog[]
}

model LoginLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  email     String
  name      String
  loginType String   // 'google' or 'credentials'
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}